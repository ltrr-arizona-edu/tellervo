<xs:schema xmlns="http://www.tridas.org/1.2.2" xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:gml="http://www.opengis.net/gml" targetNamespace="http://www.tridas.org/1.2.2" elementFormDefault="qualified" attributeFormDefault="unqualified">
